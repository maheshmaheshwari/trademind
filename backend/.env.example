# Application
APP_NAME=TradeMind
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/trademind
DATABASE_SYNC_URL=postgresql+psycopg://postgres:postgres@localhost:5432/trademind

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# API Security
API_KEY=your-api-key-change-in-production
RATE_LIMIT_PER_MINUTE=60

# Data Ingestion
DATA_INGESTION_HOUR=18
DATA_INGESTION_MINUTE=30
NIFTY500_SYMBOLS_FILE=data/nifty500_list.csv

# ML Model
MODEL_PATH=models/
CURRENT_MODEL_VERSION=v1.0.0
SIGNAL_CONFIDENCE_THRESHOLD=0.6

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
